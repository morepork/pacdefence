<map xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="map.xsd">
  <description>Mosaic Easy</description>
  <images>
    <image>mosaicPathEasy.jpg</image>
  </images>
  <pathPoints>
    <point x="0" y="130"/>
    <point x="420" y="130"/>
    <point x="420" y="470"/>
    <point x="135" y="470"/>
    <point x="135" y="280"/>
    <point x="600" y="280"/>
  </pathPoints>  
  <path>
    <!-- This is tricky as any inner part of a polygon's outline must be
         contained inside another polygon, otherwise creating a ghost fails -->
    <polygon>
      <point x="0" y="100"/>
      <point x="450" y="100"/>
      <point x="450" y="500"/>
      <point x="103" y="500"/>
      <point x="103" y="252"/>
      <point x="600" y="252"/>
      <point x="600" y="310"/>
      <point x="160" y="310"/>
      <point x="160" y="441"/>
      <point x="392" y="441"/>
      <point x="392" y="158"/>
      <point x="0" y="158"/>
    </polygon>
    <polygon>
      <point x="103" y="252"/>
      <point x="103" y="310"/>
      <point x="600" y="310"/>
      <point x="600" y="252"/>
    </polygon>
    <polygon>
      <point x="392" y="100"/>
      <point x="392" y="500"/>
      <point x="450" y="500"/>
      <point x="450" y="100"/>
    </polygon>
  </path>
  <pathBounds>
    <!-- Should be the same as the first one above, don't know a nice way of reusing it -->
    <polygon>
      <point x="0" y="100"/>
      <point x="450" y="100"/>
      <point x="450" y="500"/>
      <point x="103" y="500"/>
      <point x="103" y="252"/>
      <point x="600" y="252"/>
      <point x="600" y="310"/>
      <point x="160" y="310"/>
      <point x="160" y="441"/>
      <point x="392" y="441"/>
      <point x="392" y="158"/>
      <point x="0" y="158"/>
    </polygon>
    <rectangle x="392" y="252" width="58" height="58"/>
  </pathBounds>
</map>
